<style lang='scss' scoped>
	@use '../scss/variables/main.scss' as variables;
	@use '../scss/mixins/main.scss' as mixins;

	.about {
		padding: 5rem 10rem;
		color: variables.$color-secondary;
		margin: 0 auto;
		max-width: 105rem;

		@include mixins.respond(tab-land) {
			padding: 3rem;
		}

		@include mixins.respond(phone-lg) {
			padding: 1rem 2rem;
		}
	}

	.about__heading {
		text-align: center;
		font-size: 5rem;
		margin-bottom: 6rem;

		@include mixins.respond(tab-land) {
			font-size: 3.5rem;
			margin-bottom: 3rem;
			margin-top: 2rem;
			text-align: left;
		}
	}

	.about__content p {
		font-size: 2.5rem;
		line-height: 1.5;
		margin-bottom: 2rem;

		@include mixins.respond(tab-land) {
			font-size: 2rem;
		}
	}

	.about__action {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2rem;

		@include mixins.respond(tab-land) {
			flex-direction: column;
			padding-bottom: 2rem;

			& > * {
				width: 100%;
			}
		}
	}
</style>

---
import Link from '../../components/link';
import Logo from '../../components/logo.astro';
import Menu from '../../icons/menu.astro';

const pathname = new URL(Astro.request.url).pathname;
---

<nav class='root'>
	<Logo />

	<ul class='nav'>
		<Link text='Home' href={'/'} isActive={pathname === '/'} />
		<Link text='About Me' href={'/about'} isActive={pathname === '/about'} />
		<Link text='Work' href={'/work'} isActive={pathname === '/work'} />
		<Link text='Contact' href={'/contact'} isActive={pathname === '/contact'} />
	</ul>

	<button aria-label='Menu Toggle' class='toggler'>
		<Menu size={24} />
	</button>
</nav>

<style lang='scss' scoped>
	@use '../../scss/variables/main.scss' as variables;
	@use '../../scss/mixins/main.scss' as mixins;

	.root {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 5rem 10rem;

		@include mixins.respond(laptop-md) {
			padding: 3rem;
		}

		@include mixins.respond(tab-land) {
			padding: 2rem 1rem;
		}

		@include mixins.respond(phone-lg) {
			padding: 1rem;
			padding-top: 1.5rem;
		}
	}

	.nav {
		display: flex;
		align-items: center;
		gap: 3rem;

		@include mixins.respond(tab-land) {
			display: none;
		}
	}

	.toggler {
		display: none;

		@include mixins.respond(tab-land) {
			display: flex;

			background-color: transparent;
			border: none;
			height: 4rem;
			width: 4rem;

			align-items: center;
			justify-content: center;
		}
	}
</style>
